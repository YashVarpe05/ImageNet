<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<title>ImageNet</title>
		<script src="https://cdn.tailwindcss.com"></script>

		<meta name="description" content="" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="" />
	</head>
	<body>
		<div
			class="w-full px-10 py-3 flex justify-between bg-zinc-800 text-white items-center"
		>
			<h3>ImageNet</h3>
			<div class="flex gap-10 items-center">
				<a href="/profile">Profile</a><a href="/feed">Feed</a
				><a class="px-3 py-2 bg-red-700 text-white rounded-lg" href="/login"
					>Logout</a
				>
			</div>
		</div>
		<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
			<h1 class="text-xl">Create a new post.</h1>
			<hr class="opacity-10 mt-3" />
			<form action="/createpost" method="post" enctype="multipart/form-data">
				<input class="block w-1/3 px-3 py-2" type="file" name="postimage" />
				<input
					class="text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md"
					type="text"
					placeholder="title"
					name="title"
				/>
				<textarea
					class="text-black block w-1/3 h-60 px-3 py-2 border-2 mt-2 rounded-md"
					type="text"
					name="description"
					placeholder="description"
				></textarea>

				<input
					class="block w-1/3 px-3 py-2 mt-2 bg-red-700 rounded-md"
					type="submit"
					value="Create Post"
				/>
			</form>
		</div>
		<script src="" async defer></script>
	</body>
